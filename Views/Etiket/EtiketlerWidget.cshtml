@model IEnumerable<mBlog.Models.Etiket>

<div class="widget">

    <h5 class="widget-title">Tags</h5>

    <div class="widget-body">
        <div class="tags">
           @foreach (mBlog.Models.Etiket etiket in Model)
           {
            <a href="/Etiket/Index/@etiket.EtiketId">@etiket.EtiketAdi (@etiket.Makales.Count)</a>
           }
        </div>
    </div>

</div>

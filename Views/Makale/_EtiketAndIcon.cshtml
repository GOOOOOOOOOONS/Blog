
@model mBlog.Models.Makale



    <script src="~/Assets/js/jquery-1.11.2.min.js"></script>

<script>
    $(document).ready(function myfunction() {
        $("a.begen").click(function myfunction() {
            var id = $(this).data("id");
            var link = "/Makale/Like/" + id;
            $.ajax({
                type: "GET",
                url: link,
                success: function (result) {
                    $("span.begensayi").html(result);                    
                }

            });

        });
    });
</script>

<div class="post-prev-more-cont clearfix">
    <div class="post-prev-more left">
        <div class="tags">
            @if (Model.Etikets != null)
            {
                  foreach (mBlog.Models.Etiket etkt in Model.Etikets)
                    {
                        <a href="/Etiket/Index/@etkt.EtiketId">@etkt.EtiketAdi</a>
                       
                    }
                

            }

       
            
        </div>
    </div>

    <!--Makalede Sağ İcon Cont-->
    <div class="right">
        <a href="#Yorum" class="post-prev-count"><span aria-hidden="true" class="icon_comment_alt"></span><span class="icon-count">@Model.Yorums.Count</span></a>
        <a href="javascript:void(0)" data-id="@Model.MakaleId" class="post-prev-count begen"><span aria-hidden="true" class="icon_heart_alt"></span><span class="icon-count begensayi">@Model.Begeni</span></a>
        <a href="#" class="post-prev-count dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
            <span aria-hidden="true" class="social_share"></span>
        </a>
        <ul class="social-menu dropdown-menu dropdown-menu-right" role="menu">
            <li>
                <a href="#"><span aria-hidden="true" class="social_facebook"></span></a>
            </li>
            <li><a href="#"><span aria-hidden="true" class="social_twitter"></span></a></li>
            <li><a href="#"><span aria-hidden="true" class="social_dribbble"></span></a></li>
        </ul>
    </div>
</div>
